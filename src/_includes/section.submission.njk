{% for item in collections.sections %}
  {% if item.data.type === 'submission' %}
    <div id="mission" class="w-full flex flex-col justify items-center py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-6/7 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-halloween-cauldron text-4xl mb-4">{{ item.data.title }}</h2>
        <div>
          {{ item.templateContent | safe }}
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}
