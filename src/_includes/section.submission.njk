{% for item in collections.sections %}
  {% if item.data.type === 'submission' %}
    <div id="submission" class="flex flex-col justify items-center pb-12 bg-halloween-ghost">
      <div class="h-[calc(100vh-104px)] self-center flex flex-col text-center w-full md:w-5/6 xl:w-2/3 px-4 sm:px-0">
        <div class="flex flex-col justify-center h-full py-12">
          <h2 class="font-bold tracking-wider text-halloween-cauldron text-4xl mb-4">{{ item.data.title }}</h2>
          <div class="flex flex-col md:flex-col space-y-4 md:space-y-0 md:space-x-4 w-6/7 self-center">
            {{ item.templateContent | safe }}
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}
